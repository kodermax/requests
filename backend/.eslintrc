{
  "extends" : [
    "standard"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "promise"
  ],
  "rules": {
    "semi" : [2, "always"],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "no-console": 0,
    "max-len": [1, 120, 2],
    "no-param-reassign": [2, { "props": false }],
    "import/no-unresolved:" : [0, {"commonjs": true, "amd": true}]
  },
  "env": {
    "mocha": true
  }
}
